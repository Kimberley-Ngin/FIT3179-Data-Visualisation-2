{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Fires in Australia (January 4 2020)",
    "projection": {
      "type": "mercator"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-Data-Visualisation-2/refs/heads/main/data/STE_2016_AUST.json",
          "format": {
            "type": "topojson",
            "feature": "STE_2016_AUST"
          }
        },
        "transform": [
            {
                "filter": "datum.properties.STE_NAME16 === 'New South Wales' || datum.properties.STE_NAME16 === 'Victoria' || datum.properties.STE_NAME16 === 'Queensland' || datum.properties.STE_NAME16 === 'South Australia' || datum.properties.STE_NAME16 === 'Northern Territory'"
            }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-Data-Visualisation-2/refs/heads/main/data/fire_spots.csv"
        },
        "transform": [
            {
                "filter": "datum.longitude >= 140 && datum.longitude <= 155 && datum.latitude >= -43 && datum.latitude <= -10" 
            }
        ],
        "mark": {
          "type": "circle",
          "tooltip": {
            "content": "encoding"
          }
        },
        "encoding": {
          "longitude": {
            "field": "longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "latitude",
            "type": "quantitative"
          },
          "size": {
            "field": "frp",
            "type": "quantitative",
            "title": "Fire Radiative Power",
            "scale": {"range": [0,300], "domain": [0,3000]}
          },
          "color": {
            "field": "frp",
            "type": "quantitative",
            "title": "Fire Radiative Power",
            "scale": {
              "scheme": "darkred",
              "domain": [0,1800]
            }
          }
        }
      },
      {
        "mark": "text",
        "encoding": {
            "text": {"field": "properties.STATE"}
        }
      }
    ],
    "config": {
    "font": "Times New Roman"
    }
  }
