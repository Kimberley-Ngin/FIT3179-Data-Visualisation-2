{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Maximum Temperature in Australia by State",
    "width": 600,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-Data-Visualisation-2/refs/heads/main/data/annual_max_temp.csv"
    },
    "layer": [
        {
            "mark": "rect",
            "encoding": {
              "x": {"value": 450},
              "x2": {"value": 485},
              "color": {"value": "#ECECEC"},
              "opacity": {"value": 0.5}
            }
          },
      {
        "selection": {
          "state_highlight": {
            "type": "multi",
            "fields": [
              "state"
            ],
            "bind": "legend"
          }
        },
        "mark": "line",
        "encoding": {
          "x": {
            "timeUnit": {
              "unit": "year"
            },
            "field": "year",
            "type": "temporal"
          },
          "y": {
            "field": "avg_max_temp",
            "type": "quantitative"
          },
          "color": {
            "field": "state",
            "type": "nominal"
          },
          "opacity": {
            "condition": {
              "selection": "state_highlight",
              "value": 0.8
            },
            "value": 0.2
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "opacity": 1,
          "filled": false,
          "fill": "white"
        },
        "encoding": {
          "x": {
            "title": "Year",
            "timeUnit": {
              "unit": "year"
            },
            "field": "year",
            "type": "temporal"
          },
          "y": {
            "title": "Average Maximum Temperature (°C)",
            "field": "avg_max_temp",
            "type": "quantitative"
          },
          "color": {
            "field": "state",
            "type": "nominal"
          },
          "opacity": {
            "condition": {
              "selection": "state_highlight",
              "value": 0.6
            },
            "value": 0.2
          },
          "tooltip": [
            {
              "field": "year",
              "type": "temporal",
              "title": "Year",
              "format": "%Y"
            },
            {
              "field": "avg_max_temp",
              "type": "quantitative",
              "title": "Average Maximmum Temperature (°C)"
            },
            {
              "field": "state",
              "type": "nominal",
              "title": "City"
            }
          ]
        }
      },
      {
        "mark": {"type": "text",
                  "fontSize": 11,
                  "fontWeight": "lighter",
                  "align": "left",
                  "dx": -255,
                  "dy": 60,
                  "color": "gray"
                },
        "encoding": {
          "text": {
            "value": "Average maximum temperatures peaked in 2009 and 2019, coinciding with the 2009 and 2019-20 bushfires."
          },
          "opacity": {
            "condition": {
                "test": "year(datum.year) === 2019", 
                "value": 1
            },
            "value": 0
          }
        }
      }
    ],
    "config": {
    "font": "Avenir"
    }
  }