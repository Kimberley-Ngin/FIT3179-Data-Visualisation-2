{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Maximum Temperature in Australia by State",
    "width": 660,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-Data-Visualisation-2/refs/heads/main/data/annual_max_temp.csv"
    },
    "layer": [
        {
            "mark": "rect",
            "encoding": {
              "x": {"value": 500},
              "x2": {"value": 530},
              "color": {"value": "#ECECEC"},
              "opacity": {"value": 0.5}
            }
          },
      {
        "selection": {
          "state_highlight": {
            "type": "multi",
            "fields": [
              "state"
            ],
            "bind": "legend"
          }
        },
        "mark": "line",
        "encoding": {
          "x": {
            "timeUnit": {
              "unit": "year"
            },
            "field": "year",
            "type": "temporal"
          },
          "y": {
            "field": "avg_max_temp",
            "type": "quantitative"
          },
          "color": {
            "field": "state",
            "type": "nominal"
          },
          "opacity": {
            "condition": {
              "selection": "state_highlight",
              "value": 0.8
            },
            "value": 0.2
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "opacity": 1,
          "filled": false,
          "fill": "white"
        },
        "encoding": {
          "x": {
            "title": "Year",
            "timeUnit": {
              "unit": "year"
            },
            "field": "year",
            "type": "temporal"
          },
          "y": {
            "title": "Annual Maximum Temperature",
            "field": "avg_max_temp",
            "type": "quantitative"
          },
          "color": {
            "field": "state",
            "type": "nominal"
          },
          "opacity": {
            "condition": {
              "selection": "state_highlight",
              "value": 0.6
            },
            "value": 0.2
          },
          "tooltip": [
            {
              "field": "year",
              "type": "temporal",
              "title": "Year",
              "format": "%Y"
            },
            {
              "field": "avg_max_temp",
              "type": "quantitative",
              "title": "Average Maximmum Temperature"
            },
            {
              "field": "state",
              "type": "nominal",
              "title": "City"
            }
          ]
        }
      }
    ],
    "config": {
    "font": "Avenir"
    }
  }