{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-Data-Visualisation-2/refs/heads/main/data/temperature_anomoly.csv"
  },
  "vconcat": [
    {
      "title": "Temperature Anomoly (°C) in Australia over Time",
  "width": 600,
  "height": 300,
  "layer": [
    {
      "mark": {"type": "text",
                "fontSize": 12,
                "fontWeight": "lighter",
                "align": "left",
                "dx": -240,
                "dy": -100,
                "color": "gray"
              },
      "encoding": {
        "text": {
          "value": "Annual temperature anomoly rose above average in 1980 and only continues to increase."
        },
        "opacity": {
            "condition": {
                "test": "year(datum.Year) === 2019", 
                "value": 1
            },
            "value": 0
          }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "y": {
          "datum": 0
        }
      }
    },
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "title": "Year"
        },
        "y": {
          "field": "Temperature",
          "type": "quantitative",
          "scale": {
            "domain": [
              -1.5,
              1.8
            ]
          },
          "title": "Temperature Anomoly (°C)"
        },
        "color": {
          "condition": [
            {
              "test": "datum.Temperature < 0",
              "value": "#5499ED"
            },
            {
              "test": "year(datum.Year) == 2019",
              "value": "red"
            }
          ],
          "value": "#ED6A54"
        },
        "opacity": {
          "value": 0.7
        },
        "tooltip": [
            {
              "field": "Year",
              "type": "temporal",
              "title": "Year",
              "format": "%Y"
            },
            {
              "field": "Temperature",
              "type": "quantitative",
              "title": "Temperature Anomoly (°C)"
            },
            {
              "field": "11-year mean",
              "type": "quantitative",
              "title": "11-Year Average (°C)",
              "format": ".2f"
            }  
          ]
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}}
        },
        "y": {
          "field": "11-year mean",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ]},
  {
    "width": 600,
    "height": 100,
    "layer": [
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 0.7
      },
      "encoding": {
        "y": {
          "datum": 0
        }
      }
    },
    {
      "mark": "bar",
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "field": "Temperature",
          "type": "quantitative",
          "scale": {
            "domain": [
              -1.5,
              1.8
            ]
          },
          "title": "Temperature Anomoly (°C)",
          "axis": {"grid": false}
        },
        "color": {
          "condition": [
            {
              "test": "datum.Temperature < 0",
              "value": "#5499ED"
            }
          ],
          "value": "#ED6A54"
        },
        "opacity": {
          "value": 0.7
        }
      }
    }
  ]}],
  "config": {
    "font": "Avenir"
    }
}